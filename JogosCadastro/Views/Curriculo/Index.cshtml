
@model List<CurriculoViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
@if (ViewBag.Idioma == "I")
{
    <a href="/curriculo/create">New Register</a>

    <select name="Language" onchange="location = this.value;">
        <option value="Curriculo/Language?language=P">
            Portuguese
        </option>
        <option value="Curriculo/Language?language=I" selected>
            English
        </option>
    </select>
    <br />
    <h2>Curriculum Listing</h2>
}
else
{

    <a href="/curriculo/create">Novo Registro</a>

    <select name="Idioma" onchange="location = this.value;">
        <option value="Curriculo/Language?language=P" selected>
            Portugues
        </option>
        <option value="Curriculo/Language?language=I" >
            Inglês
        </option>
    </select>
    <br />
    <h2>Listagem de Curriculos</h2>
}

<table class="table table-responsive table-striped">
    <tr>

        @if (ViewBag.Idioma == "I")
        {
            <th>Action</th>
            <th>CPF</th>
            <th>Name</th>
            <th>CEP</th>
            <th>Street</th>
        }
        else
        {
            <th>Ações</th>
            <th>CPF</th>
            <th>Nome</th>
            <th>CEP</th>
            <th>Rua</th>
        }

    </tr>
    @foreach (var cur in Model)
    {
        <tr>
            <td>
                <a href="Curriculo/Edit?id=@cur.Id">Editar</a>
                <a href="javascript:apagarJogo(@cur.Id)">Apagar</a>
                <a href="Curriculo/Exibir?id=@cur.Id">Visualizar</a>
            </td>

            <td>@cur.CPF</td>
            <td>@cur.Nome</td>
            <td>@cur.CEP</td>
            <td>@cur.Rua</td>
        </tr>
    }
</table>

<script>
    function apagarJogo(id) {
        if (confirm('Confirma a exclusão do registro?'))
            location.href = 'Curriculo/Delete?id=' + id;
    }
</script>